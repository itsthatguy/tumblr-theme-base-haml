!!! 5
%html
  %head
    %title {Title}
    %link{ :rel => "shortcut icon", :href => "{Favicon}" }
    %link{ :rel => "alternate", :type => "application/rss+xml", :href => "{RSS}" }
    %link{ :rel => "stylesheet", :href => "style.css" }
    \{block:Description}
    <meta name="description" content="{MetaDescription}" />
    \{/block:Description}
  %body
    %h1 {Title}

    \{block:Description}
    %p#description {Description}
    \{/block:Description}

    %ol#posts
      \{block:Posts}

      \{block:Text}
      %li.post-text
        \{block:Title}
        %h3
          %a{ :href => "{Permalink}" } {Title}
        \{/block:Title}
        {Body}
      \{/block:Text}

      \{block:Photo}
      %li.post-photo
        %img(src="{PhotoURL-500}" alt="{PhotoAlt}")
        \{block:Caption}
        %div.caption {Caption}
        \{/block:Caption}
      \{/block:Photo}

      \{block:Photoset}
      %li.post-photoset
        {Photoset-500}
        \{block:Caption}
        %div.caption {Caption}
        \{/block:Caption}
      \{/block:Photoset}

      \{block:Quote}
      %li.post-quote
        "{Quote}"
        \{block:Source}
        %div.source {Source}
        \{/block:Source}
      \{/block:Quote}

      \{block:Link}
      %li.post-link
        %a.link{ :href => "{URL}", :target => "{Target}" } {Name}
        \{block:Description}
        %div.description {Description}
        \{/block:Description}
      \{/block:Link}

      \{block:Chat}
      %li.post-chat
        \{block:Title}
        %h3
          %a.link{ :href => "{Permalink}" } {Title}
        \{/block:Title}
        %ul.chat
        \{block:Lines}
        %li{ :class => "{Alt} user_{UserNumber}" }
        \{block:Label}
        %span.label {Label}
        \{/block:Label}
        {Line}
        \{/block:Lines}
      \{/block:Chat}

      \{block:Video}
      %li.post-video
        {Video-500}
        \{block:Caption}
        %div.caption {Caption}
        \{/block:Caption}
      \{/block:Video}

      \{block:Audio}
      %li.post-audio
        {AudioPlayerBlack}
        \{block:Caption}
        %div.caption {Caption}
        \{/block:Caption}
      \{/block:Audio}

      \{\block:Posts}
      
      %p#footer

        \{block:PreviousPage}
        %a.link{ :href => "{PreviousPage}"} &#171; Previous
        \{/block:PreviousPage}
        
        \{block:NextPage}
        %a.link{ :href => "{NextPage}"} Next &#187;
        \{/block:NextPage}

        %a.link{ :href => "/archive"} Archive